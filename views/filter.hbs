{{> header}}
<div class="filter">
    <h1>Filter page</h1>
    {{!-- Section 1 --}}
    <section>
        <h3>What language are you looking for?</h3>

        {{!-- Wanneer er op verzonden wordt gedrukt verstuurt browser naar de server,
        browser wordt naar /formulier geleid --}}
        <form action="/filter" method="POST">
            <fieldset>
                {{!-- Radiobuttons met talen --}}
                    <div class="selector">
                        <div>
                            <input type="radio" id="nl" name="taal" value="nl" required>
                            <label for="nl" class="selector-item_label"> Dutch chats (nl) </label>
                        </div>
                        <div>
                            <input type="radio" id="en" name="taal" value="en">
                            <label for="en" class="selector-item_label"> English chats (en) </label>
                        </div>
                        <div>
                            <input type="radio" id="de" name="taal" value="de">
                            <label for="de" class="selector-item_label"> German chats (de) </label>
                        </div>
                        <div>
                            <input type="radio" id="ch" name="taal" value="ch">
                            <label for="ch" class="selector-item_label"> Chinese chats (ch) </label>
                        </div>
                    </div>
            </fieldset>
            <input type="submit" value="Filteren"></input>
        </form>

        <h3>Search for a room</h3>
        <input type="text">

    </section>

    {{!-- Section 2 --}}
    <section>
        <ul>
                {{!-- Loop met hbs om alle rooms te weergeven uit database. --}}
                {{#each gameRooms}}
                <li class="roomsection">
                <a href="#" id="{{ this.roomNaam }}">
                    <div class="background-img-filter"style="background-image: url('{{ this.img }}');"></div>
                    <div>
                        <h3>{{ this.roomNaam }}</h3>
                        <h4>{{ this.taal }}</h4>
                    </div>
                </a>
                </li>
                {{/each}}
        </ul>
    </section>

{{> modalBox}}

</div>
{{> footer}}

