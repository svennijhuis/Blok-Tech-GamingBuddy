{{> header}}
<div class="filter">
    <h1>Filter page</h1>
    {{!-- Section 1 --}}
    <section>
        <h3>What language are you looking for?</h3>

        {{!-- Wanneer er op verzonden wordt gedrukt verstuurt browser naar de server,
        browser wordt naar /formulier geleid --}}
        <form action="/filter" method="POST">
            <fieldset>
                {{!-- Radiobuttons met diersoorten --}}
                <label for="nl">Dutch chats (nl)
                    <input type="radio" id="nl" name="taal" value="nl" required checked>
                </label>
                <label for="en">English chats (en)
                    <input type="radio" id="en" name="taal" value="en">
                </label>
                <label for="de">German chats (de)
                    <input type="radio" id="de" name="taal" value="de">
                </label>
                <label for="ch">Chinese chats (ch)
                    <input type="radio" id="ch" name="taal" value="ch">
                </label>
            </fieldset>
            <input type="submit"></input>
        </form>

    </section>

    {{!-- Section 2 --}}
    <section>
        <h2>My matches!!</h2>
        <ul>
                {{!-- Loop met hbs om alle rooms te weergeven uit database. --}}
                {{#each gameRooms}}
                <li>
                <a href="#" id="{{ this.roomNaam }}">
                    <img src="{{ this.img }}" alt="group picture">
                    <div>
                        <h3>{{ this.roomNaam }}</h3>
                        <h4>{{ this.taal }}</h4>
                        {{!-- <p>{{ this.locatie }}</p> --}}
                    </div>
                </a>
                </li>
                {{/each}}
        </ul>
    </section>

    <div class="modal hidden">
      <button class="close-modal">&times;</button>
      <h3>My personal information</h3>
        <article>
            <div>
                <p>Username</p>
                <p>{{ user.username }}</p>
            </div>
            <div>
                <p>Name</p>
                <p>{{ user.name }}</p>
            </div>
            <div>
                <p>Email</p>
                <p>{{ user.email }}</p>
            </div>
            <div>
                <p>Age</p>
                <p>{{ user.age }}</p>
            </div>
            <div>
                <p>Residence</p>
                <p>{{ user.residence}}</p>
            </div>
            <div>
                <p>Language</p>
                <p>{{ user.language }}</p>
            </div>
        </article>
    </div>
    <div class="overlay hidden"></div>
    <button class="show-modal">Information</button>
</div>
{{> footer}}